//Weapon Skin


var ItemName = "§bRune Blade Skin"
var SkinItemID = "pdmod:rune_blade"
var AllowedWeaponIDs = [2,9] //Daggers 1, Swords 2, Hammers and Clubs: 3, Flails and Whips: 4, Reach Weapons: (Spears, Halberds): 5, Scythes: 6, Great Weapons: 7, Special: 8, Wand: 9


function init(t){
    t.item.setLore(["This is a weapon skin, use a skin anvil to apply it. Place skin in offhand and weapon in mainhand.","Applies to:§6 Swords, Wands",":","§7A sword with glowing runes along its blade. What will you make of it?"]);
    t.item.setCustomName(ItemName)
    t.item.setTexture(SkinItemID)
    t.item.setDurabilityShow(false)
    t.item.getTempdata().put("AllowedWeaponIDs",AllowedWeaponIDs)
    t.item.getStoreddata().put("WeaponSkinNaeme",SkinItemID)
}


